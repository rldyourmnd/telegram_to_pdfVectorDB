# =============================================================================
# TELEGRAM CHAT PDF PROCESSOR - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize the values for your setup

# =============================================================================
# INPUT/OUTPUT SETTINGS
# =============================================================================

# Input JSON file from Telegram export
INPUT_FILE=result.json

# Output directory for generated PDF files
OUTPUT_DIR=chats_clean_pdf

# Metadata file name (will be created in OUTPUT_DIR)
METADATA_FILE=metadata_summary.json

# =============================================================================
# USER IDENTIFICATION
# =============================================================================

# Your name as it appears in Telegram (for message direction detection)
# This helps identify which messages were sent by you vs received
USER_NAME=Your Name

# Your Telegram user ID (found in exported JSON, format: user123456789)
# Used as fallback for message direction detection
USER_ID=user123456789

# =============================================================================
# PDF GENERATION SETTINGS
# =============================================================================

# Maximum file size per PDF in KB (optimal for vector databases)
# Recommended: 150-200 for embedding processing
MAX_FILE_SIZE_KB=200

# Maximum text length per message (characters)
# Longer messages will be truncated to this length
MAX_MESSAGE_LENGTH=500

# PDF font size for text content
PDF_FONT_SIZE=10

# PDF line spacing (leading)
PDF_LINE_SPACING=12

# PDF page margins (points, 72 points = 1 inch)
PDF_MARGIN_TOP=40
PDF_MARGIN_BOTTOM=40
PDF_MARGIN_LEFT=40
PDF_MARGIN_RIGHT=40

# =============================================================================
# CHUNKING ALGORITHM SETTINGS
# =============================================================================

# Messages per chunk based on average message length
# These values control how messages are grouped together

# For short messages (less than 50 characters)
CHUNK_SIZE_SHORT=25

# For medium messages (50-150 characters) 
CHUNK_SIZE_MEDIUM=18

# For long messages (more than 150 characters)
CHUNK_SIZE_LONG=12

# Minimum chunks per file (safety bounds)
MIN_CHUNKS_PER_FILE=12

# Maximum chunks per file (safety bounds)
MAX_CHUNKS_PER_FILE=100

# File size estimation multiplier (affects chunking decisions)
# Lower values = more conservative file size estimation
SIZE_ESTIMATION_MULTIPLIER=0.005

# Target file size percentage (0.8 = 80% of max size for safety)
TARGET_SIZE_PERCENTAGE=0.8

# =============================================================================
# TEXT PROCESSING SETTINGS
# =============================================================================

# Minimum message length to include (characters)
# Messages shorter than this will be skipped
MIN_MESSAGE_LENGTH=2

# Character threshold for short/medium/long message classification
SHORT_MESSAGE_THRESHOLD=50
LONG_MESSAGE_THRESHOLD=150

# =============================================================================
# AI INTEGRATION RECOMMENDATIONS
# =============================================================================

# Recommended n8n Text Splitter settings (for documentation)
RECOMMENDED_CHUNK_SIZE=800
RECOMMENDED_OVERLAP=200

# Recommended batch size for processing files
RECOMMENDED_BATCH_SIZE=5-8

# =============================================================================
# FONT PATHS (SYSTEM-SPECIFIC)
# =============================================================================

# Windows font paths (comma-separated)
WINDOWS_FONTS=C:/Windows/Fonts/arial.ttf,C:/Windows/Fonts/calibri.ttf,C:/Windows/Fonts/tahoma.ttf

# macOS font paths (comma-separated)  
MACOS_FONTS=/System/Library/Fonts/Arial.ttf

# Linux font paths (comma-separated)
LINUX_FONTS=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf

# Default font name to use if no system fonts found
DEFAULT_FONT=Helvetica

# =============================================================================
# DEBUG AND LOGGING
# =============================================================================

# Enable verbose logging (true/false)
VERBOSE_LOGGING=true

# Show font loading messages (true/false)
SHOW_FONT_INFO=true

# Show processing progress for each chat (true/false)
SHOW_PROGRESS=true 